<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanToPlate.Views.ShoppingListPage"
             Title="ShoppingListPage">
    <Grid>
        <ScrollView Grid.Row="0" x:Name="mainContent">
            <VerticalStackLayout Padding="0, 0, 0, 80">
                <Label x:Name="createShoppingListLabel" Text="Create New Shopping List" FontSize="30" BackgroundColor="{StaticResource Secondary}" Padding="5, 0, 0, 0" Margin="0, 10, 0, 20"/>
                <HorizontalStackLayout x:Name="startDateLine" HorizontalOptions="Center">
                    <Label x:Name="startDateLabel" VerticalOptions="Center" Text="Start Date:" Margin="15, 0"/>
                    <DatePicker x:Name="startDatePicker" />
                </HorizontalStackLayout>
                <HorizontalStackLayout x:Name="endDateLine" HorizontalOptions="Center" Margin="5">
                    <Label x:Name="endDateLabel" VerticalOptions="Center" Text="End Date:" Margin="15, 0"/>
                    <DatePicker x:Name="endDatePicker" />
                </HorizontalStackLayout>
                <Button x:Name="createShoppingListButton" HorizontalOptions="Center" Text="Create" BorderWidth="1" BorderColor="Black" TextColor="{StaticResource Tertiary}" BackgroundColor="{StaticResource SecondaryDark}" Margin="10" Clicked="createShoppingListButton_Clicked"/>
                
                <Label x:Name="viewShoppingListsLabel" Text="View Past Shopping List" FontSize="30" BackgroundColor="{StaticResource Secondary}" Padding="5, 0" Margin="0, 20"/>
                <VerticalStackLayout x:Name="pastShoppingLists">
                    <Label x:Name="noShoppingListsFoundLabel" Text="There are no past shopping lists. Please create one above." Margin="10"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
        <Grid x:Name="navBar" Grid.Row="1" HeightRequest="60" BackgroundColor="{StaticResource Primary}" VerticalOptions="End">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <ImageButton x:Name="recipesImageButton" Grid.Row="0" Grid.Column="0" Source="recipes.png" Aspect="AspectFit" BackgroundColor="{StaticResource Primary}" Clicked="recipesButton_Clicked"/>
            <Button x:Name="recipesButton" Grid.Row="1" Grid.Column="0" Text="Recipes" FontSize="10" CornerRadius="0" Padding="0, -20, 0, 0" Clicked="recipesButton_Clicked" />
            <ImageButton x:Name="shoppingListImageButton" Grid.Row="0" Grid.Column="1" Source="shoppinglist.png" Aspect="AspectFit" BackgroundColor="{StaticResource PrimaryDark}" Clicked="shoppingListButton_Clicked"/>
            <Button x:Name="shoppingListButton" Grid.Row="1" Grid.Column="1" Text="Shopping List" FontSize="10" BackgroundColor="{StaticResource PrimaryDark}" CornerRadius="0" Padding="0, -20, 0, 0" Clicked="shoppingListButton_Clicked" />
            <ImageButton x:Name="homeImageButton" Grid.Row="0" Grid.Column="2" Source="home.png" Aspect="AspectFit" BackgroundColor="{StaticResource Primary}" Clicked="homeButton_Clicked"/>
            <Button x:Name="homeButton" Grid.Row="1" Grid.Column="2" Text="Home" FontSize="10" CornerRadius="0" Padding="0, -20, 0, 0" Clicked="homeButton_Clicked" />
            <ImageButton x:Name="scheduleMealsImageButton" Grid.Row="0" Grid.Column="3" Source="schedulemeals.png" Aspect="AspectFit" BackgroundColor="{StaticResource Primary}" Clicked="scheduleMealsButton_Clicked"/>
            <Button x:Name="scheduleMealsButton" Grid.Row="1" Grid.Column="3" Text="Schedule Meals" FontSize="10" CornerRadius="0" Padding="0, -20, 0, 0" Clicked="scheduleMealsButton_Clicked" />
            <ImageButton x:Name="settingsImageButton" Grid.Row="0" Grid.Column="4" Source="settings.png" Aspect="AspectFit" BackgroundColor="{StaticResource Primary}" Clicked="settingsButton_Clicked"/>
            <Button x:Name="settingsButton" Grid.Row="1" Grid.Column="4" Text="Settings" FontSize="10" CornerRadius="0" Padding="0, -20, 0, 0" Clicked="settingsButton_Clicked" />
        </Grid>
    </Grid>
</ContentPage>