<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanToPlate.Views.AddRecipePage"
             Title="AddRecipePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalOptions="Center" BackgroundColor="{StaticResource Primary}" Padding="0, 0, 10, 0">
                <Label x:Name="addNewRecipeLabel" HorizontalOptions="Center" VerticalOptions="Center" FontSize="30" Text="Add New Recipe" />
                <Button x:Name="closeRecipeButton" HorizontalOptions="End" Text="X" BackgroundColor="Transparent" FontSize="30" TextColor="{StaticResource PrimaryDarkText}" Padding="5, 0, 0, 5" Clicked="closeRecipeButton_Clicked"/>
            </Grid>
        <ScrollView Grid.Row="1" VerticalOptions="Start">
            <VerticalStackLayout>
                <Grid x:Name="recipeInfoGrid" Margin="0, 20, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label x:Name="nameLabel" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center" Text="Name:" />
                <Entry x:Name="nameEntry" Grid.Row="0" Grid.Column="2" Margin="0, 10, 0, 0"/>
                <Label x:Name="typeLabel" Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Center" Text="Type:" />
                <Picker x:Name="typePicker" Grid.Row="1" Grid.Column="2" Margin="0, 10, 0, 0"/>
                <Label x:Name="deviceLabel" Grid.Row="2" Grid.Column="1" VerticalTextAlignment="Center" Text="Device"/>
                <Picker x:Name="devicePicker" Grid.Row="2" Grid.Column="2" Margin="0, 10, 0, 0"/>
            </Grid>
                <Grid x:Name="ingredientsGrid" Margin="0, 20, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="ingredientsLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontAttributes="Bold" Text="Ingredients:" Margin="10, 0"/>
                    <Entry x:Name="ingredientOneAmount" Grid.Row="1" Grid.Column="1" Margin="0, 5" Placeholder="2"/>
                    <Entry x:Name="ingredientOneMeasurement" Grid.Row="1" Grid.Column="2" Margin="5" Placeholder="Cups"/>
                    <Entry x:Name="ingredientOneName" Grid.Row="1" Grid.Column="3" Margin="0, 5" Placeholder="Milk"/>

                    <Entry x:Name="ingredientTwoAmount" Grid.Row="2" Grid.Column="1" Margin="0, 5" Placeholder="1"/>
                    <Entry x:Name="ingredientTwoMeasurement" Grid.Row="2" Grid.Column="2" Margin="5" Placeholder="tsp"/>
                    <Entry x:Name="ingredientTwoName" Grid.Row="2" Grid.Column="3" Margin="0, 5" Placeholder="Vanilla Extract"/>

                    <Entry x:Name="ingredientThreeAmount" Grid.Row="3" Grid.Column="1" Margin="0, 5" Placeholder="4"/>
                    <Entry x:Name="ingredientThreeMeasurement" Grid.Row="3" Grid.Column="2" Margin="5" Placeholder="Tbsp"/>
                    <Entry x:Name="ingredientThreeName" Grid.Row="3" Grid.Column="3" Margin="0, 5" Placeholder="Butter"/>

                    <Button x:Name="addIngredientButton" Grid.Row="4" Grid.Column="2" HorizontalOptions="End" FontSize="30" Text="+" BackgroundColor="{StaticResource Secondary}" TextColor="{StaticResource PrimaryDarkText}" Padding="0" Margin="0, 10" Clicked="addIngredientButton_Clicked"/>
                </Grid>
                <Grid x:Name="instructionsGrid" Margin="0, 20, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="instructionsLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontAttributes="Bold" Text="Instructions:" Margin="10, 0"/>
                    <Label x:Name="instructionOneLabel" Grid.Row="1" Grid.Column="0" HorizontalOptions="End" Text="1." Margin="5"/>
                    <Editor x:Name="instructionOneEditor" Grid.Row="1" Grid.Column="1" AutoSize="TextChanges" />
                    <Button x:Name="addInstructionButton" Grid.Row="2" Grid.Column="1" HorizontalOptions="Center" FontSize="30" Text="+" BackgroundColor="{StaticResource Secondary}" TextColor="{StaticResource PrimaryDarkText}" Padding="0" Margin="0, 10" Clicked="addInstructionButton_Clicked"/>
                </Grid>
                <HorizontalStackLayout x:Name="saveOrCancelButtons" HorizontalOptions="Center" Margin="0, 30">
                    <Button x:Name="saveButton" Text="Save" BackgroundColor="{StaticResource SecondaryDark}" TextColor="{StaticResource Tertiary}" Margin="5, 0" Clicked="saveButton_Clicked"/>
                    <Button x:Name="cancelButton" Text="Cancel" BackgroundColor="{StaticResource Tertiary}" TextColor="{StaticResource SecondaryDark}" Margin="5, 0" Clicked="closeRecipeButton_Clicked"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>