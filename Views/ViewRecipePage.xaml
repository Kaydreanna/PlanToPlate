<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="PlanToPlate.Views.ViewRecipePage"
             Title="ViewRecipePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalOptions="Center" BackgroundColor="{StaticResource Primary}" Padding="0, 0, 10, 0">
            <Label x:Name="recipeNameLabel" HorizontalOptions="Center" VerticalOptions="Center" FontSize="40" Text="View Recipe" />
            <ImageButton x:Name="closeRecipeImageButton" HorizontalOptions="End" VerticalOptions="Center" BackgroundColor="Transparent" Padding="5, 0, 0, 5" Clicked="closeRecipeButton_Clicked">
                <ImageButton.Source>
                    <FontImageSource FontFamily="FontAwesome" Glyph="{mi:FontAwesomeSolid Icon=Xmark}" Color="{StaticResource IconDark}"/>
                </ImageButton.Source>
            </ImageButton>
        </Grid>
        <ScrollView Grid.Row="1" VerticalOptions="Start">
            <VerticalStackLayout>
                <Grid x:Name="deviceAndTypeGrid" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" Margin="5, 0">
                        <Label x:Name="typeLabel" HorizontalOptions="Center" Text="Type" FontSize="15"/>
                    </Border>
                    <Border  Grid.Column="2" Margin="5, 0">
                        <Label x:Name="deviceLabel" HorizontalOptions="Center" Text="Device" FontSize="15"/>
                    </Border>
                </Grid>
                <HorizontalStackLayout x:Name="ratingStars" HorizontalOptions="Center" Margin="0, 10">
                    <Image x:Name="star1" IsVisible="False">
                        <Image.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="{mi:FontAwesomeSolid Icon=Star}" Color="Gold" Size="50"/>
                        </Image.Source>
                    </Image>
                    <Image x:Name="star2" IsVisible="False">
                        <Image.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="{mi:FontAwesomeSolid Icon=Star}" Color="Gold" Size="50"/>
                        </Image.Source>
                    </Image>
                    <Image x:Name="star3" IsVisible="False">
                        <Image.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="{mi:FontAwesomeSolid Icon=Star}" Color="Gold" Size="50"/>
                        </Image.Source>
                    </Image>
                    <Image x:Name="star4" IsVisible="False">
                        <Image.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="{mi:FontAwesomeSolid Icon=Star}" Color="Gold" Size="50"/>
                        </Image.Source>
                    </Image>
                    <Image x:Name="star5" IsVisible="False">
                        <Image.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="{mi:FontAwesomeSolid Icon=Star}" Color="Gold" Size="50"/>
                        </Image.Source>
                    </Image>
                    <Image x:Name="halfStar" IsVisible="False">
                        <Image.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="{mi:FontAwesomeSolid Icon=StarHalf}" Color="Gold" Size="50"/>
                        </Image.Source>
                    </Image>
                </HorizontalStackLayout>
                <Grid x:Name="ratingsGrid" Margin="0, 20" IsVisible="False">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Label x:Name="easeBackgroundColor" Grid.Row="0" Background="{StaticResource PrimaryDark}" />
                    <Label x:Name="easeRatingLabel" Grid.Row="0" HorizontalOptions="Center" FontSize="18" TextColor="{StaticResource PrimaryLightText}" Text="Ease Ratings" Margin="10"/>
                    
                    <Grid x:Name="easeRatingsGrid" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <Label x:Name="noEaseRatingsFoundMessage" Grid.Row="1" HorizontalOptions="Center" Text="No ratings for ease were recorded. Please add some above." Margin="0, 15" IsVisible="False"/>
                    
                    <Label x:Name="tasteBackgroundColor" Grid.Row="2" Background="{StaticResource PrimaryDark}"/>
                    <Label x:Name="tasteRatingLabel" Grid.Row="2" HorizontalOptions="Center" FontSize="18" TextColor="{StaticResource PrimaryLightText}" Text="Taste Ratings" Margin="10"/>
                    
                    <Grid x:Name="tasteRatingsGrid" Grid.Row="3" Margin="0, 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <Label x:Name="noTasteRatingsFoundMessage" Grid.Row="3" HorizontalOptions="Center" Text="No ratings for taste were recorded. Please add some above." Margin="0, 15" IsVisible="False"/>
                    
                    <Label x:Name="timingBackgroundColor" Grid.Row="4" Background="{StaticResource PrimaryDark}"/>
                    <Label x:Name="timingRatingLabel" Grid.Row="4" HorizontalOptions="Center" FontSize="18" TextColor="{StaticResource PrimaryLightText}" Text="Time Ratings" Margin="10"/>
                    
                    <Grid x:Name="timingRatingsGrid" Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <Label x:Name="noTimingRatingsFoundMessage" Grid.Row="5" HorizontalOptions="Center" Text="No ratings for time were recorded. Please add some above." Margin="0, 15" IsVisible="False"/>
                </Grid>
                <Button x:Name="addRatingButton" Grid.Row="3" HorizontalOptions="Center" BackgroundColor="{StaticResource SecondaryDark}" TextColor="{StaticResource Tertiary}" Text="Add Rating" Clicked="addRatingButton_Clicked"/>
                <Button x:Name="viewRatingsButton" BackgroundColor="Transparent" TextColor="{StaticResource Tertiary}" Text="View Ratings" Clicked="viewRatingsButton_Clicked" IsVisible="False"/>
                <Label x:Name="noRatingsFoundMessage" HorizontalOptions="Center" Text="There are no ratings for this recipe yet. Add some using the button above!" Margin="20" IsVisible="False"/>
                <Grid x:Name="ingredientsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="ingredientsLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Ingredients" FontSize="25" Margin="10, 0"/>
                </Grid>
                <Grid x:Name="instructionsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="instructionsLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Instructions" FontSize="25" Margin="10, 0"/>
                </Grid>
                <Button x:Name="scheduleMealButton" HorizontalOptions="Center" BackgroundColor="{StaticResource SecondaryDark}" TextColor="{StaticResource Tertiary}" Text="Schedule Meal" Margin="0, 20" Clicked="scheduleMealButton_Clicked"/>
                <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 30">
                    <Button x:Name="editRecipeButton" BackgroundColor="{StaticResource SecondaryDark}" TextColor="{StaticResource Tertiary}" Text="Edit Recipe" Margin="20" Clicked="editButton_Clicked"/>
                    <Button x:Name="deleteRecipeButton" BackgroundColor="{StaticResource Tertiary}" TextColor="{StaticResource SecondaryDark}" Text="Delete Recipe" Margin="20" Clicked="deleteButton_Clicked"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>