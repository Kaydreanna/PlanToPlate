<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanToPlate.Views.ViewRecipePage"
             Title="ViewRecipePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalOptions="Center" BackgroundColor="{StaticResource Primary}" Padding="0, 0, 10, 0">
            <Label x:Name="viewRecipeLabel" HorizontalOptions="Center" VerticalOptions="Center" FontSize="40" Text="View Recipe" />
            <Button x:Name="closeRecipeButton" HorizontalOptions="End" Text="X" BackgroundColor="Transparent" FontSize="30" TextColor="{StaticResource PrimaryDarkText}" Padding="5, 0, 0, 5"  Clicked="closeRecipeButton_Clicked"/>
        </Grid>
        <ScrollView Grid.Row="1" VerticalOptions="Start">
            <VerticalStackLayout>
                <Label x:Name="recipeNameLabel" HorizontalOptions="Center" Text="Recipe Name" FontSize="30" Margin="0, 20"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1" Margin="5, 0">
                        <Label x:Name="typeLabel" HorizontalOptions="Center" Text="Type" FontSize="15"/>
                    </Border>
                    <Border  Grid.Column="2" Margin="5, 0">
                        <Label x:Name="deviceLabel" HorizontalOptions="Center" Text="Device" FontSize="15"/>
                    </Border>
                </Grid>
                <!-- ADD STARS WITH FONT AWESOME -->
                <Label x:Name="noRatingsFoundMessage" HorizontalOptions="Center" Text="No ratings yet! The ability to add a rating is coming soon." Margin="20"/>
                <Grid x:Name="ingredientsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="ingredientsLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Ingredients" FontSize="25" Margin="10, 0"/>
                </Grid>
                <Grid x:Name="instructionsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="instructionsLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Instructions" FontSize="25" Margin="10, 0"/>
                </Grid>
                <Button x:Name="scheduleMealButton" HorizontalOptions="Center" BackgroundColor="{StaticResource SecondaryDark}" TextColor="{StaticResource Tertiary}" Text="Schedule Meal" Margin="0, 40"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>