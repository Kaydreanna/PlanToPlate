<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PlanToPlate.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="{StaticResource Primary}">
            <Image
                Margin="10"
                HeightRequest="150"
                Source="logo.png" />
            <Label
                x:Name="loginLabel"
                FontSize="40"
                HorizontalOptions="Center"
                Text="Log In"
                TextColor="{StaticResource PrimaryLightText}"
                VerticalOptions="Center" />
            <Label
                x:Name="usernameLabel"
                Margin="10,0"
                IsVisible="False"
                Text="Username:" />
            <Entry
                x:Name="usernameEntry"
                Margin="10,0"
                BackgroundColor="White"
                IsVisible="False" />
            <Label
                x:Name="emailLabel"
                Margin="10,0"
                IsVisible="False"
                Text="Email:" />
            <Entry
                x:Name="emailEntry"
                Margin="10,0"
                BackgroundColor="White"
                IsVisible="False" />
            <Label
                x:Name="emailOrUsernameLabel"
                Margin="10,0"
                Text="Email Or Username:" />
            <Entry
                x:Name="emailOrUsernameEntry"
                Margin="10,0"
                BackgroundColor="White" />
            <Label
                x:Name="passwordLabel"
                Margin="10,0"
                Text="Password:" />
            <Entry
                x:Name="passwordEntry"
                Margin="10,0"
                BackgroundColor="White" />
            <Label
                x:Name="confirmPasswordLabel"
                Margin="10,0"
                IsVisible="False"
                Text="Confirm Password:" />
            <Entry
                x:Name="confirmPasswordEntry"
                Margin="10,0"
                BackgroundColor="White"
                IsVisible="False" />
            <Button
                x:Name="LoginButton"
                Margin="10"
                Padding="30,0"
                BackgroundColor="White"
                Clicked="LoginButton_Clicked"
                HorizontalOptions="Center"
                Text="Login"
                TextColor="{StaticResource PrimaryDarkText}" />
            <Button
                x:Name="createAccountButton"
                Margin="10"
                Padding="30,0"
                BackgroundColor="White"
                Clicked="createAccountButton_Clicked"
                HorizontalOptions="Center"
                IsVisible="False"
                Text="Create Account"
                TextColor="{StaticResource PrimaryDarkText}" />
            <Button
                x:Name="createAccountLink"
                BackgroundColor="Transparent"
                Clicked="createAccountLink_Clicked"
                Text="Don't have an account? Create one" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>